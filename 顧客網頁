    <script>
        const items = [
            { name: "(菌)卓杯百家香鬆飯糰", price: 45, quantity: 1 },
            { name: "(熱)墨西哥嫩烤雞腿便當", price: 65, quantity: 1 },
            { name: "甜蔥肉燥飯糰", price: 28, quantity: 1 },
            { name: "統一超包裝拾香蔬菜", price: 35, quantity: 1 }
        ];

        function renderItemList() {
            const list = document.getElementById("itemList");
            list.innerHTML = "";
            let total = 0;

            items.forEach((item, index) => {
                const subtotal = item.price * item.quantity;
                total += subtotal;
                list.innerHTML += `
                    <div class="item-row">
                        <span>${item.name}</span>
                        <span>
                            <button onclick="updateQuantity(${index}, -1)">-</button>
                            <span style="margin: 0 10px;">${item.quantity}</span>
                            <button onclick="updateQuantity(${index}, 1)">+</button>
                            &nbsp; $${subtotal}
                        </span>
                    </div>
                `;
            });

            list.innerHTML += `
                <div class="item-row">
                    <strong>總計</strong><strong>$${total}</strong>
                </div>
            `;
        }

        function updateQuantity(index, change) {
            items[index].quantity += change;
            if (items[index].quantity < 1) items[index].quantity = 1;
            renderItemList();
        }

        function updateTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString() + ' - ' + now.toLocaleDateString('zh-Hant', {
                year: 'numeric',
                month: 'long',
                day: '2-digit'
            });
            document.getElementById('datetime').textContent = timeString;
        }

        updateTime();
        setInterval(updateTime, 1000);
        renderItemList();
    </script>
